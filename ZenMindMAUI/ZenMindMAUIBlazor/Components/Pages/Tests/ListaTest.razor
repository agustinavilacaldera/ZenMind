@inject Controllers.ModelController model
@if (listaTest != null)
{
  <div class="list-group-item">
    <div class="row">
      <div class="col-2">Id</div>
      <div class="col-10">Título</div>
    </div>
  </div>
  <div class="list-group">
    @foreach (Tests t in listaTest)
    {
      <ItemTest TestId="@t.Id" SelectedTest="selectItem" />
    }
  </div>

}


@code {
  private List<Tests> listaTest;
  [Parameter]
  public EventCallback<int> SelectedItem{ get; set; }
  protected override void OnInitialized()
  {
    listaTest = model.ListarTest();
  }
  private void selectItem(int i)
  {
    SelectedItem.InvokeAsync(i);
  }
}
